<table><h2>Performance Times</h2>

<tr>
  <th>Artist</th>
  <th>Stage</th>
  <th>Start Time</th>
  <th>End Time</th>
  <th>Add to My Schedule</th>
</tr>
  <% @performances.each do |performance| %>
<tr>
  <td> <%= performance.artist.name %> </td>
  <td> <%= performance.stage.name %> </td>
  <td> <%= performance.start_time.strftime("%A, %x at %l:%m%p") %> </td>
  <td> <%= performance.end_time.strftime("%A, %x at %l:%m%p") %> </td>
  <td> <%= button_to "Add to My Schedule", bookings_path(:performance_id => performance, :schedule_id => @user.schedule) %> </td>
</tr>
  <% end %>
</table>
<%#= (:performance_id => performance, :schedule_id => @user.schedule) %>
